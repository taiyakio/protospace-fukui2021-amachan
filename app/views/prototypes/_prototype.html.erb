<div class="card">
  <%= link_to image_tag(prototype.image, class: :card__img ), prototype_path(prototype.id)%>
  <div class="card__body">
    <%= link_to prototype.name, prototype_path(prototype.id), class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy%>
    </p>
    <%= link_to "by " + prototype.user.nickname, user_path(prototype.user.id), class: :card__user %>
  </div>
</div>