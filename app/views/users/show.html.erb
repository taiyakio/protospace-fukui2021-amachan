<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @nickname%>さんの情報
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @profile %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @affiliation %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @director %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= @nickname%>さんのプロトタイプ
      </h2>
      <div class="user__card">
        <% @prototypes.each do |prototype| %>
          <%= render partial: "prototypes/prototype", locals: { prototype: prototype, nickname: @nickname} %>
        <% end %>
      </div>
    </div>
  </div>
</div>